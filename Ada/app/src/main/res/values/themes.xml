<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ada" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D995C9</item>
        <item name="colorPrimaryVariant">#D995C9</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#D995C9</item>
        <!-- Customize your theme here. -->
        <item name="android:datePickerMode">spinner</item>
        <item name="android:datePickerStyle">@style/CustomDatePicker</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="CustomDatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
</resources>